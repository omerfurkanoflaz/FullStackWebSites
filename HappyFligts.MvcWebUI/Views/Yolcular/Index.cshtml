@model IEnumerable<HappyFligts.MvcWebUI.Entity.Yolcular>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    .btn {
        display: inline;
        margin-bottom: 5px;
    }

    .table {
        padding: 10px;
    }

    .table-bordered td, .table-bordered th {
        padding: 30px 10px;
        text-align: center;
    }
</style>

<div class="container-fluid pb-5 icerik">
    <h4><i style="color:#4c8ebe;" class="fa fa-users" aria-hidden="true"></i>Yolcu Bilgileri</h4><br>
    <table class="table table-striped" style="color:#000;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ucuslar.Guzergah)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ucuslar.UcusTarihi)
           </th>
            <th>
                @Html.DisplayNameFor(model => model.Ucuslar.KalkisSaati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YolcuAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YolcuSoyadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YolcuTc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YolcuTel)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => item.Ucuslar.Guzergah.Guzergah_Nereden)<br />
                    @Html.DisplayFor(model =>item.Ucuslar.Guzergah.Guzergah_Nereye)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucuslar.UcusTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ucuslar.KalkisSaati)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YolcuAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YolcuSoyadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YolcuTc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YolcuTel) 
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </table>
    <h4 style="margin-top:70px;"><i style="color:#4c8ebe;" class="fa fa-credit-card-alt" aria-hidden="true"></i>Ödeme Bilgileri</h4>
    <div class="container col-md-3" style="background-color:#f2f2f2;height:600px;padding:0px;">
        <div class="container col-md-12 payment-header" style="background-color:#00A6EA; padding:20px 0px;">
            <i style="margin-left:30px;" class="fa fa-cc-visa col-md-5" aria-hidden="true"></i>
            <i class="fa fa-cc-mastercard col-md-5" aria-hidden="true"></i>
        </div>
        <div class="col-md-12 container mb-5" style="margin-top:45px;">
            <div class="col-md-11 container ">
                <label for="validationServer01">Kart Üzerindeki İsim Soyisim</label>
                <input style="margin-bottom:25px;" type="text" class="form-control is-valid" id="validationServer01" placeholder="İsim Soyisim" required>
            </div>
            <div class="container col-md-11 mb-3">
                <label for="validationServer01">Kart Numarası</label>
                <input style="margin-bottom:15px;" type="password" class="form-control is-valid" id="validationServer01" placeholder="Kart Numarası" required>
            </div>
            <div class="container col-md-5 mb-3 ml-4" style="display:inline-block;">
                <select class="custom-select custom-select-sm" style="margin-left:10px;">
                    <option selected>Son Kullanma Tarihi</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="1">4</option>
                    <option value="2">5</option>
                    <option value="3">6</option>
                    <option value="1">7</option>
                    <option value="2">8</option>
                    <option value="3">9</option>
                    <option value="1">10</option>
                    <option value="2">11</option>
                    <option value="2">12</option>
                </select>
            </div>
            <div class="container col-md-5 mb-3" style="display:inline-block;">
                <select class="custom-select custom-select-sm">
                    <option selected>Son Kullanma Tarihi</option>
                    <option value="1">2018</option>
                    <option value="2">2019</option>
                    <option value="3">2020</option>
                    <option value="1">2021</option>
                    <option value="2">2022</option>
                    <option value="3">2023</option>
                    <option value="1">2024</option>
                    <option value="2">2025</option>
                    <option value="3">2026</option>
                </select>
            </div>
            <div class="container col-md-11 mb-3" style="margin-top:15px">
                <label for="example-number-input">CVC</label>
                <div class="col-5">
                    <input class="form-control" type="number" id="example-number-input" name="cvc">
                </div>
                <input type="submit" value="Onayla" class="btn btn-primary" style="float:right" data-toggle="modal" data-target="#exampleModalCenter">

                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Online Ticket</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Ödeme başarılı.Uçuşunuz için E-biletiniz düzenlenmiştir.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

